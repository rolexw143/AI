MAX = float('inf')
MIN = float('-inf')

def minmax(depth, nodeIndex, maximizingPlayer, values, alpha, beta):
    # Terminal condition (assuming depth of 3 is the terminal condition for this example)
    if depth == 3:
        return values[nodeIndex]
    
    if maximizingPlayer:
        best = MIN
        for i in range(2):  # Assuming a binary tree
            val = minmax(depth + 1, nodeIndex * 2 + i, False, values, alpha, beta)
            best = max(best, val)
            alpha = max(alpha, best)
            if beta <= alpha:
                break  # Beta cut-off
        return best
    else:
        best = MAX
        for i in range(2):  # Assuming a binary tree
            val = minmax(depth + 1, nodeIndex * 2 + i, True, values, alpha, beta)
            best = min(best, val)
            beta = min(beta, best)
            if beta <= alpha:
                break  # Alpha cut-off
        return best

# Test the Minimax function
if __name__ == "__main__":
    values = [3, 5, 6, 9, 1, 2, 0, -1]
    print("The optimal value is:", minmax(0, 0, True, values, MIN, MAX))
